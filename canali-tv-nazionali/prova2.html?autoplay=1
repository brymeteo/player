<!DOCTYPE html>
<html lang="en">
<head>
    <title>Diretta TV</title>
    <meta charset="UTF-8">
    <style>
        /* Stili per il layout della pagina */
        body {
            margin: 0;
            padding: 0;
        }
        #video-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: black;
        }
        #overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10;
            background: rgba(0, 0, 0, 0);
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div id="video-container">
        <div style="position: relative; padding-bottom: 56.25%; height: 0;">
            <iframe id="video-iframe" src="https://player.viloud.tv/embed/channel/8df2465f99c182b1c77376f36230f20c?&volume=1&controls=1&title=1&share=1&autoplay=1" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" frameborder="0" allow="autoplay; fullscreen"></iframe>
            <div id="overlay"></div>
        </div>
    </div>
    <script>
        var iframe = document.getElementById("video-iframe");
        var overlay = document.getElementById("overlay");

        overlay.addEventListener("click", function() {
            var src = iframe.src;
            if (src.indexOf("autoplay=1") === -1) {
                src += (src.indexOf("?") === -1 ? "?" : "&") + "autoplay=1";
                iframe.src = src;
            }
            overlay.style.display = 'none'; // Nascondi l'overlay dopo il click
        });

        // Simula un click sull'overlay dopo il caricamento della pagina
        window.onload = function() {
            overlay.click();
        };
    </script>
</body>
</html>
